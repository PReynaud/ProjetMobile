<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/detail_toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/abc_action_bar_default_height_material"
                android:minHeight="@dimen/abc_action_bar_default_height_material"
                android:theme="@style/ToolbarTransparentTheme">
    <ImageView android:id="@+id/return_icon"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:scaleType="center"
               android:src="@drawable/left_arrow" android:background="@android:color/transparent"
               android:contentDescription="@string/backButton" android:layout_marginLeft="7dp"/>
    <TextView android:layout_width="match_parent" android:layout_height="match_parent"
              android:textColor="@color/textColorPrimaryWhite"
              android:id="@+id/text_detail_toolbar"
              android:autoText="false" android:background="@android:color/transparent" android:textSize="20sp"
              android:visibility="gone"
              android:paddingLeft="5dp" android:textAlignment="gravity"
              android:gravity="fill_vertical"/>
</android.support.v7.widget.Toolbar>