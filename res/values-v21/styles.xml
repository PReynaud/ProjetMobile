<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primaryDark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:navigationBarColor">@color/primaryDark</item>
        <item name="android:actionMenuTextColor">@color/textColorPrimary</item>
        <item name="android:popupBackground">@color/primary</item>
    </style>

    <style name="Theme.Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ToolbarTheme" parent="android:Widget.Material.Toolbar">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="ratingBarTheme" parent="android:Widget.Material.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/rating_stars</item>
        <item name="android:minHeight">30dip</item>
        <item name="android:maxHeight">30dip</item>
    </style>
    <style name="DetailButton" parent="android:Widget.Button">
    </style>
    <style name="AddButton" parent="android:Widget.Button">
        <item name="android:colorButtonNormal">@color/textColorPrimary</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>
    <style name="ParcoursSimpleButton" parent="android:Widget.Button">
        <item name="android:colorButtonNormal">@color/textColorPrimary</item>
        <item name="android:textColor">@color/primary</item>
    </style>
</resources>