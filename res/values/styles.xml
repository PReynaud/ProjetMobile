<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Base theme applied no matter what API -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/primaryDark</item>
        <item name="android:actionMenuTextColor">@color/textColorPrimaryWhite</item>
        <item name="android:popupBackground">@color/primary</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="Theme.Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/primary</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ToolbarTransparentTheme" parent="ToolbarTheme">
        <item name="android:background">#33000000</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ratingBarTheme" parent="Base.Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_stars</item>
        <item name="android:minHeight">30dip</item>
        <item name="android:maxHeight">30dip</item>
    </style>

    <style name="ratingBarDetailTheme" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_stars</item>
        <item name="android:minHeight">15dip</item>
        <item name="android:maxHeight">15dip</item>
    </style>

    <style name="DetailButton" parent="Base.Widget.AppCompat.Button">
    </style>

    <style name="AddButton" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/primary</item>
        <item name="android:textColor">@color/textColorPrimaryWhite</item>
    </style>

    <style name="ParcoursButton" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/textColorPrimaryWhite</item>
        <item name="android:textColor">@color/primary</item>
    </style>
    <style name="PrefTheme" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/textColorPrimaryWhite</item>
        <item name="android:textColor">@color/black</item>
        <item name="windowNoTitle">false</item>
        <item name="windowActionBar">true</item>
        <item name="colorPrimary">@color/settingsPrimary</item>
        <item name="colorPrimaryDark">@color/settingsPrimaryDark</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/settingsPrimaryDark</item>
        <item name="colorAccent">@color/black</item>
    </style>
</resources>